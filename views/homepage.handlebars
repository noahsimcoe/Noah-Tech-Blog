{{#each posts as |post| }}
<div class="card-space">
    <div>
        <h2>
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Created by {{post.user.username}} on {{format_date post.time}}</p>
      </div>
      <p>
        {{post.description}}
      </p>
</div>
{{/each}}