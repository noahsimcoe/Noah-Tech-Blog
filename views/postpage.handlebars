<div class="idv-card">
    <h2>{{title}}</h2>
    <h6>Created by {{user.username}} on {{format_date time}}</h6>
    <p>{{description}}</p>
    <br>
    <h4>This post's comments:</h4>
    {{#each comments as |comment| }}
        <h6>{{comment.description}}</h6>
        <p>-{{comment.user.username}}</p>
    {{/each}}
</div>