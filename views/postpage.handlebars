<div class="row mt-4">
    <div class="idv-card col-md-6">
        <h2>{{title}}</h2>
        <h6>Created by {{user.username}} on {{format_date time}}</h6>
        <p>{{description}}</p>
        <br>
        <h4>Comments:</h4>
        {{#each comments as |comment| }}
            <h6>{{comment.description}}</h6>
            <p>-{{comment.user.username}}</p>
        {{/each}}
    </div>
    <div class="col-md-6">
        <h3>Leave a comment:</h3>
        <form class="form new-comment-form">
        <div class="form-group">
            <input class="comment-input" type="text" id="comment-description" name="comment-description" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
        </form>
    </div>
</div>
<script src="./js/comment.js"></script>